<LinearContainer
    id="screen"
    background="#303030"
    orientation="vertical"
    width="match_parent"
    height="match_parent">
    <LinearContainer
        id="top_panel"
        width="match_parent"
        weight="1"
        orientation="horizontal">
        <AbsoluteContainer
            id="left_panel"
            weight="1"
            height="match_parent"
            background="#80000000"/>
        <AbsoluteContainer
            id="right_panel"
            weight="1"
            height="match_parent"/>
    </LinearContainer>
    <LinearContainer
        id="bottom_panel"
        width="match_parent"
        height="100pt"
        orientation="horizontal"
        background="#30000000"/>
</LinearContainer>