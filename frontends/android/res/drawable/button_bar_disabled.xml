<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

    <stroke android:width="@dimen/button_bar_stroke_width" android:color="@color/button_bar_normal_top" />
    
    <gradient
        android:angle="90"
        android:endColor="@color/button_bar_normal_top"
        android:centerColor="@color/button_bar_normal_top"
        android:startColor="@color/button_bar_normal_top"
        android:type="linear" />

    <corners android:radius="@dimen/button_bar_radius" />

    <padding
        android:bottom="@dimen/button_bar_padding"
        android:left="@dimen/button_bar_padding"
        android:right="@dimen/button_bar_padding"
        android:top="@dimen/button_bar_padding" />

</shape>