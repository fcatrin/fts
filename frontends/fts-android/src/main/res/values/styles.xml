<resources>
    <style name="NormalFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>
   <style name="ActionButton">
        <item name="android:textColor">@color/pal_text1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/text_big</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:background">@drawable/button_bar</item>
        <item name="android:alpha">0.8</item>
      <item name="android:layout_marginLeft">@dimen/spacing_small</item>
      <item name="android:layout_marginRight">@dimen/spacing_small</item>
   </style>

    <style name="InputDialogEditor">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_small</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
    </style>
</resources>    
    
