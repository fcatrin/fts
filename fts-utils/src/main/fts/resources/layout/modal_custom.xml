<AbsoluteContainer
    id="modalCustomDialogPanel"
    width="match_parent"
    height="match_parent"
    background="@color/modal_smoke"
    visibility="gone">
    <LinearContainer
        id="dialogContainer"
        width="@dimen/modal_width"
        height="wrap_content"
        background="@drawable/modal_background"
        padding="@dimen/modal_padding"
        containerAlign="center"
        orientation="vertical">
        <AbsoluteContainer
            id="dialogCustomArea"
            width="wrap_content"
            height="wrap_content"
            padding="@dimen/modal_padding_text"/>
        <LinearContainer
            id ="actions"
            width="match_parent"
            height="wrap_content"
            padding="@dimen/modal_padding_text"
            separator="@dimen/spacing_small"
            marginTop="@dimen/spacing_normal"
            orientation="horizontal">
            <ButtonWidget 
                id="btnYes"
                style="modal_button"/>
            <ButtonWidget 
                id="btnNo"
                style="modal_button"/>
        </LinearContainer>
            
    </LinearContainer>
</AbsoluteContainer>