<AbsoluteContainer
    id="modalFilesPanel"
    width="match_parent"
    height="match_parent"
    background="@color/modal_smoke"
    visibility="gone">
    <LinearContainer
        id="filesContainer"
        width="@dimen/modal_width"
        height="wrap_content"
        background="@drawable/modal_background"
        containerAlign="center"
        orientation="vertical">
        <TextWidget
            id="filesTitle"
            width="match_parent"
            height="wrap_content"
            align="center"
            fontSize="@dimen/text_normal"
            fontName="bold"
            padding="@dimen/modal_padding_text"
            color="@color/modal_foreground"
            maxLines="2"
            />
        <fts.utils.dialogs.FileListWidget
            id="filesList"
            width="match_parent"
            height="wrap_content"
            background="@color/modal_foreground"
            marginBottom="10pt"
            />
    </LinearContainer>
</AbsoluteContainer>