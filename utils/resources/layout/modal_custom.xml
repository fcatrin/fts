<AbsoluteContainer
    id="modalCustomDialogPanel"
    width="match_parent"
    height="match_parent"
    background="@color/modal_smoke"
    visibility="gone">
    <LinearContainer
        id="dialogContainer"
        width="@dimen/modal_width"
        height="wrap_content"
        background="@drawable/modal_background"
        containerAlign="center"
        orientation="vertical">
        <AbsoluteContainer
            id="dialogCustomArea"
            width="wrap_content"
            height="wrap_content"
            padding="10pt"/>
        <LinearContainer
            id ="actions"
            width="match_parent"
            height="wrap_content"
            padding="10pt"
            separator="10pt"
            orientation="horizontal">
            <ButtonWidget 
                id="btnYes"
                height="wrap_content"
                background="@drawable/modal_button_background"
                color="@color/modal_background"
                padding="6pt"
                align="center"
                fontSize="@dimen/text_normal"/>
            <ButtonWidget 
                id="btnNo"
                height="wrap_content"
                fontSize="@dimen/text_normal"
                background="@drawable/modal_button_background"
                padding="6pt"
                align="center"
                color="@color/modal_background"/>
        </LinearContainer>
            
    </LinearContainer>
</AbsoluteContainer>