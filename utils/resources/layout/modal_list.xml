<AbsoluteContainer
    id="modalListPanel"
    width="match_parent"
    height="match_parent"
    background="@color/modal_smoke"
    visibility="gone">
    <LinearContainer
        id="listContainer"
        width="@dimen/modal_width"
        height="wrap_content"
        background="@drawable/modal_background"
        containerAlign="center"
        orientation="vertical">
        <TextWidget
            id="title"
            width="match_parent"
            height="wrap_content"
            align="center"
            fontSize="@dimen/text_title"
            fontName="bold"
            padding="10pt"
            color="@color/modal_foreground"
            />
        <fts.utils.dialogs.ListOptionWidget
            id="list"
            width="match_parent"
            height="wrap_content"
            background="@color/modal_foreground"
            marginBottom="10pt"
            />
    </LinearContainer>
</AbsoluteContainer>